{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "verbose": true,
  "extensionsToTreatAsEsm": [".ts"],
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "testRegex": "/test/.*\\.(test|spec)\\.tsx?$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "coverageDirectory": "coverage"
}
